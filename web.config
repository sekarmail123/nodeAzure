<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="index.js" verb="*" modules="iisnode"/>
    </handlers>

    <iisnode loggingEnabled="true" logDirectory="iisnode"/>

    <environmentVariables>
      <environmentVariable name="NODE_ENV" value="production"/>
    </environmentVariables>
  </system.webServer>
</configuration>
